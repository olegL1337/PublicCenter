@model PublicCenter.Models.ExtraModels.ServiceListModel
@{
    ViewData["Title"] = "ServiceList";
}

<div>

    <h3>Services:</h3>
    <div>
        <a asp-action="CreateService">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Motor Disabilities</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Service service in Model.services)
            {
            <tr>
                <td> @service.ID </td>
                <td> @service.Name </td>
                <td> @Model.servicesTypes.FirstOrDefault(t => t.ID == service.ServiceTypeID).Name
                <td> @service.GroupOfMotorActivity </td>
                <td> @service.Price </td>
                <td>@Html.ActionLink("Edit", "EditService", new { id = service.ID }) |</td>
            </tr>
            }
        </tbody>

    </table>

    <h3>Types:</h3>
    <div>
        <a asp-action="CreateServiceType">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ServiceType type in Model.servicesTypes)
            {
                <tr>
                    <td>@type.ID</td>
                    <td>@type.Name</td>
                    <td>@Html.ActionLink("Edit", "EditServiceType", new { id = type.ID }) |</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index">Back</a>
</div>
